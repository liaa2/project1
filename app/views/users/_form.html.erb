
<div class="form-group">
  <%= form_for(@user, :html => {:multipart => true}) do |f| %>
    <%= f.label :username%>
    <%= f.text_field :username,class: "form-control one" %>
    <br>
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email,class: "form-control one" %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password,class: "form-control one" %>
    <br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,class: "form-control one" %>
    <br>
    <% f.label :image %>
    <%= f.cl_image_upload :image,class: "form-control one"%>
    <br><br>
    <%= f.submit class:"btn btn-primary"%>
  <% end %>
</div>
