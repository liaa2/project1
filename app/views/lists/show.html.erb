<h2>Lists: <%= @list.name %></h2>

<p><%= @list.note %></p>

<div class="list-group">
  <% @list.cocktails.each do |c| %>
    <li class="list-group-item">
    <strong><%= link_to c.name, cocktail_path( c ) %></strong>,&nbsp;&nbsp;<em><%= link_to c.bar.name, bar_path(c.bar_id)%></em>
    <% if @current_user.present? && @list.user == @current_user  %>
    <br>
    <%= link_to 'delete', unfavourite_cocktail_path(c.id, @list.id), method: :delete, class: "redirect"%>
    <% end %>
    </li>
  <% end %>
</div>

<br><br>

<div class ="control second">
  <% if @current_user.present? && @list.user == @current_user %>

  <%= link_to "Edit", edit_list_path(@list) %>&nbsp;&nbsp;&nbsp;&nbsp;

  <%= link_to "Delete", list_path(@list), method: :delete %>
</div>

<%= link_to "Add More Cocktails", bars_path %>
<% end %>
&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to "List Collections", lists_path %>
&nbsp;&nbsp;&nbsp;&nbsp;

<%= link_to "Back to Profile", profile_path %>
