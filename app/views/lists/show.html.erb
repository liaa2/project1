<h2>Lists: <%= @list.name %></h2>

<p><%= @list.note %></p>

<ul>
<% @list.cocktails.each do |c| %>
  <li>
  <strong><%= link_to c.name, cocktail_path( c ) %></strong>,&nbsp;&nbsp;<em><%= link_to c.bar.name, bar_path(c.bar_id)%></em> <%= link_to 'delete', unfavourite_cocktail_path(c.id, @list.id), method: :delete %>
  </li>
  <% end %>
</ul>

<hr>

<% if @current_user.present? && @list.user == @current_user %>

<%= link_to "Edit", edit_list_path(@list) %>

<%= link_to "Delete", list_path(@list), method: :delete %>

<br>
<br>
<%= link_to "Click here to Add More", bars_path %>
<br>
<%= link_to "Back to Profile", profile_path %>
<% end %>
