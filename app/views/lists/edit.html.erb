<h2>Edit <%= @list.name %></h2>

<%= form_for @list do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :note %>
  <%= f.text_field :note %>
  <br>
  <br>
  Cocktails:
  <br>
  <% @list.cocktails.each do |c| %>
    <%= check_box_tag 'cocktails[]', c.id, true, id: c.id  %>
    <%= label_tag c.id, "#{c.name} (#{c.bar.name})" %>
    <br>
  <% end%>
  <%= f.submit %>
<% end %>
<br>
<br>
<br>
<%= link_to "Cancel", list_path(@list) %>
