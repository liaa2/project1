<h1>Edit <%= @cocktail.name %></h1>

<%= form_for @cocktail do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :image %>
<%= f.text_field :image %>
<br>
<%= f.label :description %>
<%= f.text_area :description %>
<br>
<%= f.label :bar_id, "Bar" %>
<%= f.select :bar_id, Bar.pluck(:name, :id), include_blank: true %>
<br>
<%= f.submit%>
<% end%>
