<h1>Cocktail: <%= @cocktail.name %></h1>

<p>What is <%= @cocktail.name  %>?</p>
<%= @cocktail.description %>

<p>Ingredients:</p>
<ul>
<% @cocktail.ingredients.each do |i| %>
<li>
  <%=  i.beverage %>
</li>
<% end %>
</ul>

<% if @cocktail.image.present? %>
<%= image_tag @cocktail.image %>
<% end %>
<br>

<% if @lists.present? %>
  <p>It belongs to my list:</p>
  <% @lists.each do |l|%>
  <%= l.name %>
  <% end %>

<% else %>

  <p>Add it to my list:</p>
  <br>
  <%# if @current_user.present? %>
  <%# @current_user.lists.each do |list| %>
    <%= form_tag favourite_cocktail_path(@cocktail) do %>
      <!-- <fieldset> -->
    <%= label_tag :list_id, 'My lists' %>
    <%= select_tag :list_id, options_for_select(@current_user.lists.pluck(:name, :id)), include_blank: true %>
      <!-- </fieldset> -->
    <%= submit_tag "Add"%>
    <% end %>
<% end %>
<%# end %>
<hr>
<%= link_to "Edit", edit_cocktail_path(@cocktail) %>
<%= link_to "Delete", cocktail_path(@cocktail), method: :delete %>

<br>
<%= link_to "Back to Bar", bar_path(@cocktail.bar) %>
